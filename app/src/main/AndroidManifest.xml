<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipg.gcyclerclient2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchGameActivity"
            android:parentActivityName="pt.ipg.gcyclerclient2.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ipg.gcyclerclient2.MainActivity" />
        </activity>
        <activity
            android:name=".ShowGameActivity"
            android:parentActivityName="pt.ipg.gcyclerclient2.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ipg.gcyclerclient2.MainActivity" />
        </activity>
        <activity
            android:name=".CopiesForSaleActivity"
            android:parentActivityName="pt.ipg.gcyclerclient2.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ipg.gcyclerclient2.MainActivity" />
        </activity>
        <activity
            android:name=".SwiperActivity"
            android:label="@string/title_activity_swiper"
            android:parentActivityName="pt.ipg.gcyclerclient2.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.ipg.gcyclerclient2.MainActivity" />
        </activity>
    </application>

</manifest>